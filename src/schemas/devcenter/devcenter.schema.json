{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Azure DevCenter Configuration",
    "type": "object",
    "properties": {
        "devCenterName": {
            "type": "string",
            "description": "The name of the DevCenter."
        },
        "location": {
            "type": "string",
            "description": "The Azure region where the DevCenter is located."
        },
        "projects": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "A list of project names associated with the DevCenter."
        },
        "environmentTypes": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "A list of environment types (e.g., Development, Testing, Production)."
        },
        "resourceGroup": {
            "type": "string",
            "description": "The name of the resource group containing the DevCenter resources."
        },
        "tags": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            },
            "description": "A set of tags associated with the DevCenter."
        },
        "networkConfiguration": {
            "type": "object",
            "properties": {
                "vnetName": {
                    "type": "string",
                    "description": "The name of the virtual network."
                },
                "subnetName": {
                    "type": "string",
                    "description": "The name of the subnet."
                }
            },
            "required": [
                "vnetName",
                "subnetName"
            ],
            "description": "Network configuration for the DevCenter."
        },
        "identity": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "SystemAssigned",
                        "UserAssigned"
                    ],
                    "description": "The type of managed identity."
                },
                "userAssignedIdentities": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "A list of user-assigned identities."
                }
            },
            "required": [
                "type"
            ],
            "description": "Identity configuration for the DevCenter."
        }
    },
    "required": [
        "devCenterName",
        "location",
        "projectName",
        "environmentType",
        "resourceGroup"
    ],
    "additionalProperties": false
}